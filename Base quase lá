#include <stdio.h>
#include <stdlib.h>

FILE* AbreArquivo(char modo, char caminho[30]){
    FILE *arquivo;
    switch(modo){
        case 'g':
            arquivo = fopen(caminho, "wt");
            break;
        case 'l':
            arquivo = fopen(caminho, "rt");
            break;
        case 'a':
            arquivo = fopen(caminho, "a");
            break;
    }
    if(arquivo==NULL){
        printf("Nao foi possivel abrir o arquivo");
        exit(0);
    }
    return arquivo;
}

void FechaArquivo(FILE *arquivo){
    fclose(arquivo);
}

void Cadastra(int dia, int mes, int ano, char nome[30], int cpf, float nivA){
    FILE *arquivo;
    arquivo = AbreArquivo('a', "relatorio.txt");
    fprintf(arquivo, "%d %d %d %s %d %f\n", dia, mes, ano, nome, cpf, nivA);
    FechaArquivo(arquivo);
}
void Listar(){
    FILE *arquivo;
    int dia, mes, ano,cpf;
    char nome[30];
    float nivA;

    arquivo = AbreArquivo('l', "relatorio.txt");

    while(!feof(arquivo)){ //Enquanto nao for fir do arquivo ele vai ler
        fscanf(arquivo,"%d %d %d %s %d %f ", &dia, &mes, &ano, &nome, &cpf, &nivA);
        printf("Data: %d/%d/%d - Nome: %s - CPF: %d - Nivel de Alcool: %.2f\n", dia, mes, ano, nome, cpf, nivA);
    }
    FechaArquivo(arquivo);
}

int menu(){
    int opcao;
    printf("===============================================\t\n");
    printf("===================BAFOMETRO===================\t\n");
    printf("===============================================\t\n");
    printf("[1] - INSERIR DADOS \n");
    printf("[2] - IMPRIMIR RELATORIO \n");
    printf("[3] - ESTATISTICAS \n");
    printf("[4] - SAIR \n");
    printf("\nEscolha uma opcao: ");
    scanf("%d", &opcao);
    system("cls");
    return opcao;
}

int main(){
    char nome[30], sancao[30], encaminha[30];
    int data, dia, mes, ano, cpf, i , embriagado, opcaoSelecionada, respTeste, vMulta, detidos, liberados, totMed;
    float nivA;
    do{
        system("cls");
        opcaoSelecionada = menu();
        totMed = 0;
        switch(opcaoSelecionada) {
             case 1:
                printf("\nDigite a data de hoje[dd/mm/aa]: ");
                setbuf(stdin,NULL);
                scanf("%d/%d/%d", &dia, &mes, &ano);
                printf("\nDigite o nome: ");
                setbuf(stdin,NULL);
                gets(nome);
                printf("\nDigite os tres primeiros digitos do cpf: ");
                setbuf(stdin,NULL);
                scanf("%d", &cpf);
                printf("\nRealize a medicao: ");
                scanf("%f", &nivA);
                if(nivA < 0.05){
                    liberados = liberados + 1;
                }
                else{
                    detidos = detidos + 1;
                    totMed = liberados + detidos;
                    }

                Cadastra(dia, mes, ano, nome, cpf, nivA);
                system("pause");
                break;

            case 2:
                Listar();
                system("pause");
                break;

            case 3:
                //EstatÃ­sticas
                break;

            case 4:
                printf("\nObrigado!\n");
                system("pause");
                break;

            default:
                printf("----- Opcao Invalida -----");
                system("pause");
                break;
        }

    }while (opcaoSelecionada != 4);


    system("pause");
    return 0;

}
